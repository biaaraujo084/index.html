    <script>


        function senai() 
     
        {  
        
            $login = this.Form1.flogin.value;

            $senha = this.Form1.fSenha.value;
            
            
            if (($login == "SENAI") && ($senha == "12345678")){
                window.location.href ="formulario.html"
                return false;
               
            

            }
            else {

                document.write("<center>")
                window.location.href = "erro.html"
                document.write("</center>")
                return false;
            }
        }


    </script>
</head>

<body bgcolor='#8B008B'>>
    <Font color="#FFFFFF" size="6"> 
    <center> <h1> LOGIN </h1>     
    <form name="Form1" action="" method="post" onsubmit="return senai()">

        Usuário: <input type="text" name="flogin" size="23"> <br> <br>

        Senha: <input type="password" name="fSenha" size="23"> <br>
        <br>


        <input type="submit" value="GRAVAR">

</center>
    </form>

</body>

